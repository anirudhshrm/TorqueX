<%- include('./partials/header') %>

<!-- Hero Section -->
<section class="hero-section">
  <div class="container">
    <div class="text-center">
      <div class="hero-badge">
        ‚ú® Premium Car Rentals
      </div>
      <h1>
        DISCOVER YOUR
        <span class="block">DREAM RIDE</span>
      </h1>
      <p class="hero-subtitle">
        Experience luxury and performance with our premium fleet of vehicles
      </p>
      <div class="hero-buttons">
        <a href="/vehicles" class="hero-btn-primary">
          <span>Browse Collection</span>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
        <a href="/contact" class="hero-btn-secondary">
          <span>Get Started</span>
        </a>
      </div>
    </div>
  </div>
</section>

<!-- Featured Vehicles Section -->
<section id="featured" class="homepage-section dark-bg">
  <div class="container">
    <div class="text-center mb-16">
      <div class="section-badge">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
        </svg>
        <span>Discover Premium</span>
      </div>
      <h2 class="section-title">FEATURED VEHICLES</h2>
      <p class="section-subtitle">Explore our curated selection of high-performance vehicles</p>
    </div>
    
    <% if (featuredVehicles && featuredVehicles.length > 0) { %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
        <% featuredVehicles.slice(0, 6).forEach(vehicle => { %>
          <div class="vehicle-card">
            <!-- Image Container -->
            <div class="vehicle-card-image">
              <img 
                src="<%= vehicle.images[0] || '/images/vehicle-placeholder.jpg' %>" 
                alt="<%= vehicle.name %>"
              >
              <div class="vehicle-card-overlay">
                <a href="/vehicles/<%= vehicle.id %>" class="vehicle-card-view-btn">View Details ‚Üí</a>
              </div>
              <div class="vehicle-card-type-badge">
                <%= vehicle.type %>
              </div>
            </div>
            
            <!-- Card Content -->
            <div class="vehicle-card-content">
              <h3 class="vehicle-card-name"><%= vehicle.name %></h3>
              
              <div class="vehicle-card-price-row">
                <div>
                  <span class="vehicle-card-price">$<%= vehicle.pricePerDay %></span>
                  <span class="vehicle-card-price-label">/day</span>
                </div>
                
                <% if (vehicle.availability) { %>
                  <span class="vehicle-card-badge available">
                    Available
                  </span>
                <% } else { %>
                  <span class="vehicle-card-badge booked">Booked</span>
                <% } %>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
      <div class="text-center" style="margin-top: 4rem;">
        <a href="/vehicles" class="hero-btn-primary">
          <span>View All Vehicles</span>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
      </div>
    <% } else { %>
      <div class="text-center section-subtitle" style="padding: 3rem 0;">
        <p>No featured vehicles available at the moment.</p>
      </div>
    <% } %>
  </div>
</section>

