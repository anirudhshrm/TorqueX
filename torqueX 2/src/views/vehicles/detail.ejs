<%- include('../partials/header') %>
<link rel="stylesheet" href="/stylesheets/vehicles.css">

<div class="vehicle-detail-container">
  <a href="/vehicles" class="vehicle-back-btn">
    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
    </svg>
    Back to Vehicles
  </a>
  
  <div class="vehicle-detail-card">
    <div class="vehicle-detail-layout">
      <!-- Vehicle Image -->
      <div class="vehicle-detail-image-wrapper">
        <img 
          src="<%= vehicle.images && vehicle.images.length > 0 ? vehicle.images[0] : '/images/placeholder-car.jpg' %>" 
          alt="<%= vehicle.name %>" 
          class="vehicle-detail-image"
          onerror="this.src='/images/placeholder-car.jpg'; this.onerror=null;"
        >
      </div>
      
      <!-- Vehicle Details -->
      <div class="vehicle-detail-content">
        <div class="vehicle-detail-header">
          <h1 class="vehicle-detail-title"><%= vehicle.name %></h1>
          <span class="vehicle-detail-type-badge">
            <%= vehicle.type %>
          </span>
        </div>
        
        <div class="vehicle-rating">
          <div class="vehicle-stars">
            <% for(let i = 1; i <= 5; i++) { %>
              <svg class="<%= i <= Math.round(avgRating) ? 'star-filled' : 'star-empty' %>" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
              </svg>
            <% } %>
          </div>
          <span class="vehicle-rating-text"><%= avgRating.toFixed(1) %> (<%= vehicle.reviews.length %> reviews)</span>
        </div>
        
        <p class="vehicle-description">
          <%= vehicle.description || 'No description available' %>
        </p>
        
        <% if (vehicle.specs) { %>
        <div class="vehicle-specs-grid">
          <% if (vehicle.specs.seats) { %>
          <div class="vehicle-spec-item">
            <h3 class="vehicle-spec-label">Seats</h3>
            <p class="vehicle-spec-value"><%= vehicle.specs.seats %></p>
          </div>
          <% } %>
          <% if (vehicle.specs.transmission) { %>
          <div class="vehicle-spec-item">
            <h3 class="vehicle-spec-label">Transmission</h3>
            <p class="vehicle-spec-value"><%= vehicle.specs.transmission %></p>
          </div>
          <% } %>
          <% if (vehicle.specs.fuelType) { %>
          <div class="vehicle-spec-item">
            <h3 class="vehicle-spec-label">Fuel Type</h3>
            <p class="vehicle-spec-value"><%= vehicle.specs.fuelType %></p>
          </div>
          <% } %>
          <% if (vehicle.specs.year) { %>
          <div class="vehicle-spec-item">
            <h3 class="vehicle-spec-label">Year</h3>
            <p class="vehicle-spec-value"><%= vehicle.specs.year %></p>
          </div>
          <% } %>
        </div>
        <% } %>
        
        <div class="vehicle-pricing-section">
          <div class="vehicle-pricing-info">
            <h3>Price Per Day</h3>
            <p class="vehicle-detail-price">$<%= vehicle.pricePerDay %></p>
          </div>
          <div>
            <% if (vehicle.availability) { %>
              <a href="/bookings/create?vehicleId=<%= vehicle.id %>" class="vehicle-book-btn">
                Book Now
              </a>
            <% } else { %>
              <div class="vehicle-unavailable-badge">
                Currently Unavailable
              </div>
            <% } %>
          </div>
        </div>
        
        <% if (vehicle.features && vehicle.features.length > 0) { %>
        <div class="vehicle-features-section">
          <h3 class="vehicle-features-title">Features</h3>
          <div class="vehicle-features-list">
            <% vehicle.features.forEach(feature => { %>
              <div class="vehicle-feature-item">
                <svg class="vehicle-feature-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="vehicle-feature-text"><%= feature %></span>
              </div>
            <% }) %>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </div>
  
  <!-- Reviews Section -->
  <div class="mt-12">
    <h2 class="text-2xl font-bold mb-6 dark:text-white">Customer Reviews</h2>
    
    <% if (vehicle.reviews.length === 0) { %>
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 text-center">
        <p class="text-gray-700 dark:text-gray-300">There are no reviews yet for this vehicle.</p>
      </div>
    <% } else { %>
      <div class="space-y-6">
        <% vehicle.reviews.forEach(review => { %>
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
            <div class="flex justify-between items-start mb-4">
              <div class="flex items-start">
                <div class="flex-shrink-0">
                  <div class="h-10 w-10 rounded-full bg-blue-600 text-white flex items-center justify-center">
                    <%= review.user.name.charAt(0).toUpperCase() %>
                  </div>
                </div>
                <div class="ml-4">
                  <h3 class="text-lg font-bold dark:text-white"><%= review.title %></h3>
                  <div class="flex items-center">
                    <div class="flex items-center">
                      <% for(let i = 1; i <= 5; i++) { %>
                        <svg class="h-4 w-4 <%= i <= review.rating ? 'text-yellow-400' : 'text-gray-300' %>" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                        </svg>
                      <% } %>
                    </div>
                    <span class="ml-2 text-sm text-gray-600 dark:text-gray-400"><%= review.user.name %></span>
                  </div>
                </div>
              </div>
              <span class="text-sm text-gray-500 dark:text-gray-400">
                <%= new Date(review.createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %>
              </span>
            </div>
            <p class="text-gray-700 dark:text-gray-300"><%= review.comment %></p>
          </div>
        <% }) %>
      </div>
    <% } %>
    
    <!-- Add Review Form -->
    <% if (user && userHasBooked) { %>
      <div class="mt-8">
        <h3 class="text-xl font-bold mb-4 dark:text-white">Write a Review</h3>
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
          <form action="/reviews/create" method="POST" class="space-y-4">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <input type="hidden" name="vehicleId" value="<%= vehicle.id %>">
            
            <div>
              <label for="title" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Review Title</label>
              <input type="text" id="title" name="title" required class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white">
            </div>
            
            <div>
              <label for="rating" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Rating</label>
              <select id="rating" name="rating" required class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white">
                <option value="">Select Rating</option>
                <option value="5">5 - Excellent</option>
                <option value="4">4 - Very Good</option>
                <option value="3">3 - Good</option>
                <option value="2">2 - Poor</option>
                <option value="1">1 - Very Poor</option>
              </select>
            </div>
            
            <div>
              <label for="comment" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Your Review</label>
              <textarea id="comment" name="comment" rows="4" required class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white"></textarea>
            </div>
            
            <div>
              <button type="submit" class="inline-block bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 transition duration-300">
                Submit Review
              </button>
            </div>
          </form>
        </div>
      </div>
    <% } else if (user) { %>
      <div class="mt-8 bg-blue-50 dark:bg-blue-900/20 rounded-lg p-6 text-center">
        <p class="text-gray-700 dark:text-gray-300">You need to rent this vehicle before you can leave a review.</p>
      </div>
    <% } %>
  </div>
</div>

<%- include('../partials/footer') %>