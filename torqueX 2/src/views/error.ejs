<%- include('./partials/header') %>

<div class="container mx-auto px-4 py-16 text-center">
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-8 max-w-lg mx-auto">
    <h1 class="text-3xl font-bold text-red-600 dark:text-red-400 mb-4"><%= message %></h1>
    <% if (error && error.status) { %>
      <h2 class="text-xl text-gray-700 dark:text-gray-300 mb-6">Status: <%= error.status %></h2>
    <% } %>
    
    <% if (error && process.env.NODE_ENV === 'development') { %>
      <div class="mt-6 text-left bg-gray-100 dark:bg-gray-700 p-4 rounded-lg overflow-auto max-h-64">
        <pre class="text-sm text-gray-800 dark:text-gray-200"><%= error.stack %></pre>
      </div>
    <% } %>
    
    <div class="mt-8">
      <a href="/" class="inline-block bg-blue-600 text-white py-2 px-6 rounded-lg hover:bg-blue-700 transition duration-300">Return to Home</a>
    </div>
  </div>
</div>

<%- include('./partials/footer') %>