<%- include('../partials/header') %>
<link rel="stylesheet" href="/stylesheets/login.css">

<div class="login-wrapper">
  <div class="login-container">
    <!-- Login Card -->
    <div class="login-card">
      <!-- Logo/Brand Section -->
      <div class="login-header">
        <h1 class="login-title">Welcome Back</h1>
        <p class="login-subtitle">Sign in to your account</p>
      </div>

      <!-- Login Form -->
      <form action="/auth/callback" method="POST" class="login-form">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">

        <!-- Email Input -->
        <div class="form-group">
          <label for="email" class="form-label">Email</label>
          <input type="email" id="email" name="email" placeholder="Enter your email" class="form-input" required>
        </div>

        <!-- Password Input -->
        <div class="form-group">
          <label for="password" class="form-label">Password</label>
          <div class="password-input-wrapper">
            <input type="password" id="password" name="password" placeholder="Enter your password" class="form-input password-input" required>
            <button type="button" onclick="togglePassword()" class="password-toggle">
              <svg id="eye-icon" class="eye-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
              </svg>
            </button>
          </div>
        </div>

        <!-- Remember Me -->
        <div class="form-options">
          <label class="remember-checkbox">
            <input type="checkbox" class="checkbox-input">
            <span class="checkbox-label">Remember me</span>
          </label>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="login-submit-btn">
          Sign In
        </button>
      </form>

      <div id="clerk-auth-container" class="clerk-container" style="display: none;">
        <div class="clerk-loading">
          <p>Loading authentication service...</p>
        </div>
      </div>

      <!-- Sign Up Link -->
      <div class="login-footer">
        <p class="signup-text">
          New to TorqueX?
          <a href="/auth/signup" class="signup-link">Create an account</a>
        </p>
      </div>
    </div>
  </div>
</div>

<script>
  function togglePassword() {
    const passwordInput = document.getElementById('password');
    const eyeIcon = document.getElementById('eye-icon');

    if (passwordInput.type === 'password') {
      passwordInput.type = 'text';
      eyeIcon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />';
    } else {
      passwordInput.type = 'password';
      eyeIcon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />';
    }
  }

  document.addEventListener('DOMContentLoaded', function () {
    const formElement = document.querySelector('form');
    const clerkContainer = document.getElementById('clerk-auth-container');

    clerkContainer.style.display = 'none';
    formElement.style.display = 'block';

    document.addEventListener('clerkLoaded', function () {
      if (window.Clerk && window.Clerk.mountSignIn) {
        formElement.style.display = 'none';
        clerkContainer.style.display = 'block';
        clerkContainer.innerHTML = '';

        window.Clerk.mountSignIn(clerkContainer, {
          signInUrl: '/auth/login',
          afterSignInUrl: '/auth/callback',
          redirectUrl: '/auth/callback'
        });
      }
    });

    document.addEventListener('clerkFailed', function () {
      formElement.style.display = 'block';
      clerkContainer.style.display = 'none';
    });
  });
</script>

<%- include('../partials/footer') %>