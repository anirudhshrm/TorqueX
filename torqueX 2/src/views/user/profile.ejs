<%- include('../partials/header') %>
<link rel="stylesheet" href="/stylesheets/user-dashboard.css">

<!-- Hero Section -->
<div class="user-dashboard-hero">
  <div class="user-dashboard-container">
    <h1 class="user-dashboard-hero-title">Profile Settings</h1>
    <p class="user-dashboard-hero-subtitle">Manage your account information</p>
  </div>
</div>

<div class="user-dashboard-wrapper">
  <div class="user-dashboard-content">
    <!-- Sidebar -->
    <aside class="user-dashboard-sidebar">
      <!-- User Profile Card -->
      <div class="user-profile-card">
        <div class="user-avatar">
          <%= user.name.charAt(0).toUpperCase() %>
        </div>
        <div class="user-info">
          <h2 class="user-name"><%= user.name %></h2>
          <p class="user-email"><%= user.email %></p>
          <p class="user-since">Member since <%= new Date(user.createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long' }) %></p>
        </div>
      </div>
      
      <!-- Navigation Menu -->
      <nav class="user-dashboard-nav">
        <a href="/user/dashboard" class="nav-link">
          <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
          <span>Dashboard</span>
        </a>
        <a href="/user/bookings" class="nav-link">
          <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <span>My Bookings</span>
        </a>
        <a href="/user/broadcasts" class="nav-link">
          <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z" />
          </svg>
          <span>Announcements</span>
        </a>
        <a href="/user/reviews" class="nav-link">
          <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
          </svg>
          <span>My Reviews</span>
        </a>
        <a href="/user/profile" class="nav-link active">
          <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          <span>Profile Settings</span>
        </a>
      </nav>
    </aside>
    
    <!-- Main Content -->
    <main class="user-dashboard-main">
      <!-- Messages -->
      <% if (successMessage) { %>
        <div class="alert alert-success">
          <p><%= successMessage %></p>
        </div>
      <% } %>
      
      <!-- Profile Information Section -->
      <section class="dashboard-section">
        <div class="section-header">
          <h2 class="section-title">
            <svg class="section-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            Profile Information
          </h2>
        </div>
        
        <div class="profile-form-container">
          <form action="/user/profile" method="POST" class="profile-form">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            
            <div class="form-group">
              <label for="name" class="form-label">Full Name</label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                value="<%= user.name %>" 
                class="form-input"
                required
              >
            </div>
            
            <div class="form-group">
              <label for="email" class="form-label">Email Address</label>
              <input 
                type="email" 
                id="email" 
                value="<%= user.email %>" 
                class="form-input form-input-disabled"
                disabled
              >
              <p class="form-hint">Email cannot be changed. This is managed by your login provider.</p>
            </div>
            
            <div class="form-group">
              <label for="phone" class="form-label">Phone Number</label>
              <input 
                type="tel" 
                id="phone" 
                name="phone" 
                value="<%= user.phone || '' %>" 
                class="form-input"
                placeholder="Enter your phone number"
              >
            </div>
            
            <div class="form-group">
              <label for="address" class="form-label">Address</label>
              <textarea 
                id="address" 
                name="address" 
                rows="3" 
                class="form-textarea"
                placeholder="Enter your address"
              ><%= user.address || '' %></textarea>
            </div>
            
            <div class="form-actions">
              <button type="submit" class="profile-submit-btn">
                <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Save Changes
              </button>
            </div>
          </form>
        </div>
      </section>
      
      <!-- Account Security Section -->
      <section class="dashboard-section">
        <div class="section-header">
          <h2 class="section-title">
            <svg class="section-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
            Account Security
          </h2>
        </div>
        
        <div class="security-content">
          <p class="security-text">
            Your account is managed by our secure authentication provider. To change your password or update security settings, please use the options provided by the authentication service.
          </p>
          
          <a href="/auth/logout" class="profile-logout-btn">
            <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
            </svg>
            Sign Out
          </a>
        </div>
      </section>
    </main>
  </div>
</div>

<%- include('../partials/footer') %>