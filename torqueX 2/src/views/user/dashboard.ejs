<%- include('../partials/header') %>
<link rel="stylesheet" href="/stylesheets/user-dashboard.css">

<!-- Hero Section -->
<div class="user-dashboard-hero">
  <div class="user-dashboard-container">
    <h1 class="user-dashboard-hero-title">My Dashboard</h1>
    <p class="user-dashboard-hero-subtitle">Welcome back, <%= user.name %></p>
  </div>
</div>

<div class="user-dashboard-wrapper">
  <div class="user-dashboard-content">
    <!-- Sidebar -->
    <aside class="user-dashboard-sidebar">
      <!-- User Profile Card -->
      <div class="user-profile-card">
        <div class="user-avatar">
          <%= user.name.charAt(0).toUpperCase() %>
        </div>
        <div class="user-info">
          <h2 class="user-name"><%= user.name %></h2>
          <p class="user-email"><%= user.email %></p>
          <p class="user-since">Member since <%= new Date(user.createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long' }) %></p>
        </div>
      </div>
      
      <!-- Navigation Menu -->
      <nav class="user-dashboard-nav">
        <a href="/user/dashboard" class="nav-link active">
          <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
          <span>Dashboard</span>
        </a>
        <a href="/user/bookings" class="nav-link">
          <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <span>My Bookings</span>
        </a>
        <a href="/user/broadcasts" class="nav-link">
          <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z" />
          </svg>
          <span>Announcements</span>
        </a>
        <a href="/user/reviews" class="nav-link">
          <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
          </svg>
          <span>My Reviews</span>
        </a>
        <a href="/user/profile" class="nav-link">
          <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          <span>Profile Settings</span>
        </a>
      </nav>
    </aside>
    
    <!-- Main Content -->
    <main class="user-dashboard-main">
      <!-- Messages -->
      <% if (successMessage) { %>
        <div class="alert alert-success">
          <p><%= successMessage %></p>
        </div>
      <% } %>
      
      <% if (errorMessage) { %>
        <div class="alert alert-error">
          <p><%= errorMessage %></p>
        </div>
      <% } %>
      
      <!-- Announcements Section -->
      <section class="dashboard-section">
        <div class="section-header">
          <h2 class="section-title">
            <svg class="section-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z" />
            </svg>
            Announcements
          </h2>
        </div>
        
        <div class="announcements-list">
          <% if (broadcasts && broadcasts.length > 0) { %>
            <% broadcasts.forEach(broadcast => { %>
              <div class="announcement-card">
                <p class="announcement-message"><%= broadcast.message %></p>
                <p class="announcement-time"><%= new Date(broadcast.createdAt).toLocaleString() %></p>
              </div>
            <% }); %>
          <% } else { %>
            <div class="empty-state">
              <p>No announcements yet.</p>
            </div>
          <% } %>
        </div>
      </section>
      
      <!-- Upcoming Bookings Section -->
      <section class="dashboard-section">
        <div class="section-header">
          <h2 class="section-title">
            <svg class="section-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            Upcoming Bookings
          </h2>
        </div>
        
        <% if (upcomingBookings.length === 0) { %>
          <div class="empty-state">
            <svg class="empty-state-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <p class="empty-state-text">You don't have any upcoming bookings.</p>
            <a href="/vehicles" class="empty-state-btn">Browse Vehicles</a>
          </div>
        <% } else { %>
          <div class="bookings-table-wrapper">
            <table class="bookings-table">
              <thead>
                <tr>
                  <th>Vehicle</th>
                  <th>Dates</th>
                  <th>Total</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% upcomingBookings.forEach(booking => { %>
                  <tr>
                    <td>
                      <div class="vehicle-info">
                        <div class="vehicle-image">
                          <img 
                            src="<%= booking.vehicle.images && booking.vehicle.images.length > 0 ? booking.vehicle.images[0] : '/images/placeholder-car.jpg' %>" 
                            alt="<%= booking.vehicle.name %>"
                            onerror="this.src='/images/placeholder-car.jpg'; this.onerror=null;"
                          >
                        </div>
                        <div class="vehicle-details">
                          <div class="vehicle-name"><%= booking.vehicle.name %></div>
                          <div class="vehicle-type"><%= booking.vehicle.type %></div>
                        </div>
                      </div>
                    </td>
                    <td>
                      <div class="booking-dates">
                        <div class="date-main"><%= new Date(booking.startDate).toLocaleDateString() %></div>
                        <div class="date-sub">to <%= new Date(booking.endDate).toLocaleDateString() %></div>
                      </div>
                    </td>
                    <td>
                      <div class="booking-total">$<%= booking.totalAmount %></div>
                    </td>
                    <td>
                      <span class="booking-badge badge-success"><%= booking.status %></span>
                    </td>
                    <td>
                      <a href="/bookings/<%= booking.id %>" class="booking-action-btn">Details</a>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } %>
      </section>
      
      <!-- Recent Activity Section -->
      <section class="dashboard-section">
        <div class="section-header">
          <h2 class="section-title">
            <svg class="section-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Recent Activity
          </h2>
        </div>
        
        <% if (pastBookings.length === 0 && reviews.length === 0) { %>
          <div class="empty-state">
            <svg class="empty-state-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
            </svg>
            <p class="empty-state-text">No recent activity to display.</p>
          </div>
        <% } else { %>
          <div class="activity-list">
            <% [...pastBookings, ...reviews].sort((a, b) => new Date(b.createdAt) - new Date(a.createdAt)).slice(0, 5).forEach(item => { %>
              <div class="activity-item">
                <div class="activity-icon <%= item.rating ? 'icon-review' : 'icon-booking' %>">
                  <% if (item.rating) { %>
                    <svg fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                    </svg>
                  <% } else { %>
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                  <% } %>
                </div>
                <div class="activity-content">
                  <p class="activity-text">
                    <% if (item.rating) { %>
                      You reviewed <strong><%= item.vehicle.name %></strong> with <%= item.rating %> stars.
                    <% } else { %>
                      You completed a booking for <strong><%= item.vehicle.name %></strong>.
                    <% } %>
                  </p>
                  <p class="activity-time">
                    <%= new Date(item.createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %>
                  </p>
                </div>
              </div>
            <% }) %>
          </div>
        <% } %>
      </section>
      
      <!-- Recommended Vehicles Section -->
      <section class="dashboard-section">
        <div class="section-header">
          <h2 class="section-title">
            <svg class="section-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
            </svg>
            Recommended for You
          </h2>
          <a href="/vehicles" class="view-all-link">View All →</a>
        </div>
        
        <div class="recommended-grid">
          <% recommendedVehicles.forEach(vehicle => { %>
            <div class="recommended-card">
              <div class="recommended-image">
                <img 
                  src="<%= vehicle.images && vehicle.images.length > 0 ? vehicle.images[0] : '/images/placeholder-car.jpg' %>" 
                  alt="<%= vehicle.name %>"
                  onerror="this.src='/images/placeholder-car.jpg'; this.onerror=null;"
                >
              </div>
              <div class="recommended-content">
                <h3 class="recommended-title"><%= vehicle.name %></h3>
                <p class="recommended-price">$<%= vehicle.pricePerDay %>/day</p>
                <a href="/vehicles/<%= vehicle.id %>" class="recommended-link">View Details →</a>
              </div>
            </div>
          <% }) %>
        </div>
      </section>
    </main>
  </div>
</div>

<script>
  window.userData = {
    userId: '<%= user.id %>',
    role: '<%= user.role %>'
  };
</script>
<script src="/javascripts/broadcasts.js"></script>

<%- include('../partials/footer') %>