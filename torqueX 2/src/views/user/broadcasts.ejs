<%- include('../partials/header') %>
<link rel="stylesheet" href="/stylesheets/user-dashboard.css">

<!-- Hero Section -->
<div class="user-dashboard-hero">
  <div class="user-dashboard-container">
    <h1 class="user-dashboard-hero-title">Announcements</h1>
    <p class="user-dashboard-hero-subtitle">Stay updated with important news from TorqueX</p>
  </div>
</div>

<div class="user-dashboard-wrapper">
  <div class="user-dashboard-content">
    <!-- Sidebar -->
    <aside class="user-dashboard-sidebar">
      <!-- User Profile Card -->
      <div class="user-profile-card">
        <div class="user-avatar">
          <%= user.name.charAt(0).toUpperCase() %>
        </div>
        <div class="user-info">
          <h2 class="user-name"><%= user.name %></h2>
          <p class="user-email"><%= user.email %></p>
          <p class="user-since">Member since <%= new Date(user.createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long' }) %></p>
        </div>
      </div>
      
      <!-- Navigation Menu -->
      <nav class="user-dashboard-nav">
        <a href="/user/dashboard" class="nav-link">
          <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
          <span>Dashboard</span>
        </a>
        <a href="/user/bookings" class="nav-link">
          <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <span>My Bookings</span>
        </a>
        <a href="/user/broadcasts" class="nav-link active">
          <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z" />
          </svg>
          <span>Announcements</span>
        </a>
        <a href="/user/reviews" class="nav-link">
          <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
          </svg>
          <span>My Reviews</span>
        </a>
        <a href="/user/profile" class="nav-link">
          <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          <span>Profile Settings</span>
        </a>
      </nav>
    </aside>
    
    <!-- Main Content -->
    <main class="user-dashboard-main">
      <!-- Messages -->
      <% if (successMessage) { %>
        <div class="alert alert-success">
          <p><%= successMessage %></p>
        </div>
      <% } %>
      
      <% if (errorMessage) { %>
        <div class="alert alert-error">
          <p><%= errorMessage %></p>
        </div>
      <% } %>
      
      <!-- Broadcasts Section -->
      <section class="dashboard-section">
        <div class="section-header">
          <h2 class="section-title">
            <svg class="section-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z" />
            </svg>
            All Announcements
          </h2>
        </div>
        
        <div class="broadcasts-list broadcast-container">
          <% if (broadcasts && broadcasts.length > 0) { %>
            <% broadcasts.forEach(broadcast => { %>
              <div class="broadcast-item">
                <div class="broadcast-icon">
                  <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z" />
                  </svg>
                </div>
                <div class="broadcast-content">
                  <p class="broadcast-message"><%= broadcast.message %></p>
                  <div class="broadcast-meta">
                    <svg class="broadcast-time-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span class="broadcast-time"><%= new Date(broadcast.createdAt).toLocaleString() %></span>
                  </div>
                </div>
              </div>
            <% }); %>
          <% } else { %>
            <div class="empty-state">
              <svg class="empty-state-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
              </svg>
              <p class="empty-state-text">No announcements yet. Check back later for updates!</p>
            </div>
          <% } %>
        </div>
      </section>
    </main>
  </div>
</div>

<script>
  window.userData = {
    userId: '<%= user.id %>',
    role: '<%= user.role %>'
  };
</script>
<script src="/javascripts/broadcasts.js"></script>

<%- include('../partials/footer') %>