<%- include('../partials/header') %>
<link rel="stylesheet" href="/stylesheets/user-dashboard.css">

<!-- Hero Section -->
<div class="user-dashboard-hero">
  <div class="user-dashboard-container">
    <h1 class="user-dashboard-hero-title">My Bookings</h1>
    <p class="user-dashboard-hero-subtitle">View and manage your rental bookings</p>
  </div>
</div>

<div class="user-dashboard-wrapper">
  <div class="user-dashboard-content">
    <!-- Sidebar -->
    <aside class="user-dashboard-sidebar">
      <!-- User Profile Card -->
      <div class="user-profile-card">
        <div class="user-avatar">
          <%= user.name.charAt(0).toUpperCase() %>
        </div>
        <div class="user-info">
          <h2 class="user-name"><%= user.name %></h2>
          <p class="user-email"><%= user.email %></p>
          <p class="user-since">Member since <%= new Date(user.createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long' }) %></p>
        </div>
      </div>
      
      <!-- Navigation Menu -->
      <nav class="user-dashboard-nav">
        <a href="/user/dashboard" class="nav-link">
          <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
          <span>Dashboard</span>
        </a>
        <a href="/user/bookings" class="nav-link active">
          <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <span>My Bookings</span>
        </a>
        <a href="/user/broadcasts" class="nav-link">
          <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z" />
          </svg>
          <span>Announcements</span>
        </a>
        <a href="/user/reviews" class="nav-link">
          <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
          </svg>
          <span>My Reviews</span>
        </a>
        <a href="/user/profile" class="nav-link">
          <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          <span>Profile Settings</span>
        </a>
      </nav>
    </aside>
    
    <!-- Main Content -->
    <main class="user-dashboard-main">
      <!-- Messages -->
      <% if (successMessage) { %>
        <div class="alert alert-success">
          <p><%= successMessage %></p>
        </div>
      <% } %>
      
      <% if (errorMessage) { %>
        <div class="alert alert-error">
          <p><%= errorMessage %></p>
        </div>
      <% } %>
      
      <!-- Booking Tabs -->
      <div class="bookings-tabs-container">
        <button class="bookings-tab active" data-tab="all">
          All Bookings
        </button>
        <button class="bookings-tab" data-tab="confirmed">
          Confirmed
        </button>
        <button class="bookings-tab" data-tab="completed">
          Completed
        </button>
        <button class="bookings-tab" data-tab="canceled">
          Canceled
        </button>
      </div>
      
      <!-- All Bookings Section -->
      <div id="all-bookings" class="booking-section">
        <% if (bookings && bookings.length > 0) { %>
          <div class="bookings-list">
            <% bookings.forEach(booking => { %>
              <div class="booking-card">
                <div class="booking-card-header">
                  <div class="booking-vehicle-info">
                    <h3 class="booking-vehicle-name"><%= booking.vehicle.make %> <%= booking.vehicle.model %> <%= booking.vehicle.year %></h3>
                    <p class="booking-id">Booking ID: #<%= booking.id.substring(0, 8) %></p>
                  </div>
                  <div class="booking-status-badge">
                    <% if (booking.status === 'CONFIRMED') { %>
                      <span class="badge badge-confirmed">Confirmed</span>
                    <% } else if (booking.status === 'PENDING') { %>
                      <span class="badge badge-pending">Pending</span>
                    <% } else if (booking.status === 'CANCELLED') { %>
                      <span class="badge badge-cancelled">Cancelled</span>
                    <% } else if (booking.status === 'COMPLETED') { %>
                      <span class="badge badge-completed">Completed</span>
                    <% } %>
                  </div>
                </div>
                
                <div class="booking-card-content">
                  <div class="booking-details-grid">
                    <div class="booking-detail">
                      <p class="detail-label">Pick-up Date</p>
                      <p class="detail-value"><%= new Date(booking.startDate).toLocaleDateString('en-US', { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric' }) %></p>
                    </div>
                    <div class="booking-detail">
                      <p class="detail-label">Return Date</p>
                      <p class="detail-value"><%= new Date(booking.endDate).toLocaleDateString('en-US', { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric' }) %></p>
                    </div>
                    <div class="booking-detail">
                      <p class="detail-label">Total Price</p>
                      <p class="detail-value">$<%= booking.totalPrice.toFixed(2) %></p>
                    </div>
                  </div>
                  
                  <div class="booking-actions">
                    <a href="/vehicles/<%= booking.vehicleId %>" class="booking-action-link">
                      View Vehicle
                    </a>
                    
                    <% if (booking.status === 'CONFIRMED' && new Date(booking.startDate) > new Date()) { %>
                      <form action="/bookings/<%= booking.id %>/cancel" method="POST" class="booking-action-form">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button type="submit" class="booking-action-link booking-action-cancel" onclick="return confirm('Are you sure you want to cancel this booking? This action cannot be undone.')">
                          Cancel Booking
                        </button>
                      </form>
                    <% } %>
                    
                    <% if (booking.status === 'COMPLETED' && !booking.hasReview) { %>
                      <a href="/reviews/create/<%= booking.id %>" class="booking-action-link booking-action-review">
                        Leave a Review
                      </a>
                    <% } %>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        <% } else { %>
          <div class="empty-state">
            <svg class="empty-state-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
            <p class="empty-state-text">You haven't made any bookings yet. Explore our collection and book your dream car today!</p>
            <a href="/vehicles" class="empty-state-btn">Browse Vehicles</a>
          </div>
        <% } %>
      </div>
      
      <!-- Confirmed Bookings Section -->
      <div id="confirmed-bookings" class="booking-section hidden">
        <% 
          const confirmedBookings = bookings ? bookings.filter(booking => booking.status === 'CONFIRMED') : [];
          if (confirmedBookings.length > 0) { 
        %>
          <div class="bookings-list">
            <% confirmedBookings.forEach(booking => { %>
              <div class="booking-card">
                <div class="booking-card-header">
                  <div class="booking-vehicle-info">
                    <h3 class="booking-vehicle-name"><%= booking.vehicle.make %> <%= booking.vehicle.model %> <%= booking.vehicle.year %></h3>
                    <p class="booking-id">Booking ID: #<%= booking.id.substring(0, 8) %></p>
                  </div>
                  <div class="booking-status-badge">
                    <span class="badge badge-confirmed">Confirmed</span>
                  </div>
                </div>
                
                <div class="booking-card-content">
                  <div class="booking-details-grid">
                    <div class="booking-detail">
                      <p class="detail-label">Pick-up Date</p>
                      <p class="detail-value"><%= new Date(booking.startDate).toLocaleDateString('en-US', { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric' }) %></p>
                    </div>
                    <div class="booking-detail">
                      <p class="detail-label">Return Date</p>
                      <p class="detail-value"><%= new Date(booking.endDate).toLocaleDateString('en-US', { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric' }) %></p>
                    </div>
                    <div class="booking-detail">
                      <p class="detail-label">Total Price</p>
                      <p class="detail-value">$<%= booking.totalPrice.toFixed(2) %></p>
                    </div>
                  </div>
                  
                  <div class="booking-actions">
                    <a href="/vehicles/<%= booking.vehicleId %>" class="booking-action-link">
                      View Vehicle
                    </a>
                    
                    <% if (new Date(booking.startDate) > new Date()) { %>
                      <form action="/bookings/<%= booking.id %>/cancel" method="POST" class="booking-action-form">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button type="submit" class="booking-action-link booking-action-cancel" onclick="return confirm('Are you sure you want to cancel this booking? This action cannot be undone.')">
                          Cancel Booking
                        </button>
                      </form>
                    <% } %>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        <% } else { %>
          <div class="empty-state">
            <svg class="empty-state-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
            <p class="empty-state-text">You don't have any confirmed bookings at the moment.</p>
            <a href="/vehicles" class="empty-state-btn">Browse Vehicles</a>
          </div>
        <% } %>
      </div>
      
      <!-- Completed Bookings Section -->
      <div id="completed-bookings" class="booking-section hidden">
        <% 
          const completedBookings = bookings ? bookings.filter(booking => booking.status === 'COMPLETED') : [];
          if (completedBookings.length > 0) { 
        %>
          <div class="bookings-list">
            <% completedBookings.forEach(booking => { %>
              <div class="booking-card">
                <div class="booking-card-header">
                  <div class="booking-vehicle-info">
                    <h3 class="booking-vehicle-name"><%= booking.vehicle.make %> <%= booking.vehicle.model %> <%= booking.vehicle.year %></h3>
                    <p class="booking-id">Booking ID: #<%= booking.id.substring(0, 8) %></p>
                  </div>
                  <div class="booking-status-badge">
                    <span class="badge badge-completed">Completed</span>
                  </div>
                </div>
                
                <div class="booking-card-content">
                  <div class="booking-details-grid">
                    <div class="booking-detail">
                      <p class="detail-label">Pick-up Date</p>
                      <p class="detail-value"><%= new Date(booking.startDate).toLocaleDateString('en-US', { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric' }) %></p>
                    </div>
                    <div class="booking-detail">
                      <p class="detail-label">Return Date</p>
                      <p class="detail-value"><%= new Date(booking.endDate).toLocaleDateString('en-US', { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric' }) %></p>
                    </div>
                    <div class="booking-detail">
                      <p class="detail-label">Total Price</p>
                      <p class="detail-value">$<%= booking.totalPrice.toFixed(2) %></p>
                    </div>
                  </div>
                  
                  <div class="booking-actions">
                    <a href="/vehicles/<%= booking.vehicleId %>" class="booking-action-link">
                      View Vehicle
                    </a>
                    
                    <% if (!booking.hasReview) { %>
                      <a href="/reviews/create/<%= booking.id %>" class="booking-action-link booking-action-review">
                        Leave a Review
                      </a>
                    <% } else { %>
                      <span class="reviewed-badge">
                        <svg viewBox="0 0 20 20" fill="currentColor">
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                        </svg>
                        Reviewed
                      </span>
                    <% } %>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        <% } else { %>
          <div class="empty-state">
            <svg class="empty-state-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
            <p class="empty-state-text">You don't have any completed bookings yet.</p>
            <a href="/vehicles" class="empty-state-btn">Browse Vehicles</a>
          </div>
        <% } %>
      </div>
      
      <!-- Canceled Bookings Section -->
      <div id="canceled-bookings" class="booking-section hidden">
        <% 
          const canceledBookings = bookings ? bookings.filter(booking => booking.status === 'CANCELLED') : [];
          if (canceledBookings.length > 0) { 
        %>
          <div class="bookings-list">
            <% canceledBookings.forEach(booking => { %>
              <div class="booking-card">
                <div class="booking-card-header">
                  <div class="booking-vehicle-info">
                    <h3 class="booking-vehicle-name"><%= booking.vehicle.make %> <%= booking.vehicle.model %> <%= booking.vehicle.year %></h3>
                    <p class="booking-id">Booking ID: #<%= booking.id.substring(0, 8) %></p>
                  </div>
                  <div class="booking-status-badge">
                    <span class="badge badge-cancelled">Canceled</span>
                  </div>
                </div>
                
                <div class="booking-card-content">
                  <div class="booking-details-grid">
                    <div class="booking-detail">
                      <p class="detail-label">Scheduled Pick-up</p>
                      <p class="detail-value"><%= new Date(booking.startDate).toLocaleDateString('en-US', { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric' }) %></p>
                    </div>
                    <div class="booking-detail">
                      <p class="detail-label">Scheduled Return</p>
                      <p class="detail-value"><%= new Date(booking.endDate).toLocaleDateString('en-US', { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric' }) %></p>
                    </div>
                    <div class="booking-detail">
                      <p class="detail-label">Total Price</p>
                      <p class="detail-value">$<%= booking.totalPrice.toFixed(2) %></p>
                    </div>
                  </div>
                  
                  <div class="booking-actions">
                    <a href="/vehicles/<%= booking.vehicleId %>" class="booking-action-link">
                      Book Again
                    </a>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        <% } else { %>
          <div class="empty-state">
            <svg class="empty-state-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
            <p class="empty-state-text">You don't have any canceled bookings.</p>
          </div>
        <% } %>
      </div>
    </main>
  </div>
</div>

<%- include('../partials/footer') %>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const tabs = document.querySelectorAll('.bookings-tab');
    const sections = document.querySelectorAll('.booking-section');
    
    tabs.forEach(tab => {
      tab.addEventListener('click', function() {
        tabs.forEach(t => t.classList.remove('active'));
        this.classList.add('active');
        
        sections.forEach(section => section.classList.add('hidden'));
        
        const sectionId = this.getAttribute('data-tab') + '-bookings';
        document.getElementById(sectionId).classList.remove('hidden');
      });
    });
  });
</script>