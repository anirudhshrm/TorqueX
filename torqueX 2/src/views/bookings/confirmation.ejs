<%- include('../partials/header') %>

<div class="bg-gray-50 min-h-screen py-12">
  <div class="container mx-auto px-4">
    <div class="max-w-2xl mx-auto">
      <!-- Success Message -->
      <div class="bg-white rounded-lg shadow-lg p-8 mb-8">
        <div class="text-center mb-8">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-green-100 rounded-full mb-4">
            <svg class="w-8 h-8 text-green-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <h1 class="text-3xl font-bold text-gray-900 mb-2">Booking Confirmed!</h1>
          <p class="text-gray-600 text-lg">Your vehicle rental has been successfully reserved</p>
        </div>

        <!-- Booking Details -->
        <div class="space-y-6">
          <div class="bg-blue-50 border-l-4 border-blue-600 p-6 rounded">
            <h3 class="text-xl font-semibold text-gray-900 mb-4">Booking Reference</h3>
            <p class="text-3xl font-bold text-blue-600 font-mono"><%= booking.id %></p>
            <p class="text-sm text-gray-600 mt-2">Save this reference number for your records</p>
          </div>

          <!-- Vehicle Information -->
          <div class="border-t border-gray-200 pt-6">
            <h3 class="text-xl font-semibold text-gray-900 mb-4">Vehicle Information</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <% if (booking.vehicle.images && booking.vehicle.images[0]) { %>
                <img src="<%= booking.vehicle.images[0] %>" alt="<%= booking.vehicle.name %>" class="w-full h-64 object-cover rounded-lg">
              <% } else { %>
                <div class="w-full h-64 bg-gray-300 rounded-lg flex items-center justify-center">
                  <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
              <% } %>
              <div class="space-y-4">
                <div>
                  <p class="text-sm text-gray-600">Vehicle</p>
                  <p class="text-2xl font-bold text-gray-900"><%= booking.vehicle.name %></p>
                </div>
                <div>
                  <p class="text-sm text-gray-600">Type</p>
                  <p class="text-lg font-semibold text-gray-900"><%= booking.vehicle.type %></p>
                </div>
                <div>
                  <p class="text-sm text-gray-600">Daily Rate</p>
                  <p class="text-lg font-semibold text-blue-600">$<%= booking.vehicle.pricePerDay.toFixed(2) %>/day</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Rental Dates -->
          <div class="border-t border-gray-200 pt-6">
            <h3 class="text-xl font-semibold text-gray-900 mb-4">Rental Dates</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div class="bg-gray-50 p-4 rounded-lg">
                <p class="text-sm text-gray-600">Pickup Date & Time</p>
                <p class="text-lg font-semibold text-gray-900"><%= new Date(booking.startDate).toLocaleString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric', hour: '2-digit', minute: '2-digit' }) %></p>
              </div>
              <div class="bg-gray-50 p-4 rounded-lg">
                <p class="text-sm text-gray-600">Return Date & Time</p>
                <p class="text-lg font-semibold text-gray-900"><%= new Date(booking.endDate).toLocaleString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric', hour: '2-digit', minute: '2-digit' }) %></p>
              </div>
            </div>
          </div>

          <!-- Price Summary -->
          <div class="border-t border-gray-200 pt-6">
            <h3 class="text-xl font-semibold text-gray-900 mb-4">Price Summary</h3>
            <div class="space-y-3">
              <div class="flex justify-between">
                <span class="text-gray-700">Daily Rate</span>
                <span class="font-medium">$<%= booking.vehicle.pricePerDay.toFixed(2) %></span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-700">Number of Days</span>
                <span class="font-medium"><%= Math.ceil((new Date(booking.endDate) - new Date(booking.startDate)) / (1000 * 60 * 60 * 24)) %></span>
              </div>
              <div class="flex justify-between border-t border-gray-200 pt-3 mt-3">
                <span class="font-semibold text-lg">Total Amount</span>
                <span class="text-blue-600 font-bold text-lg">$<%= booking.totalPrice.toFixed(2) %></span>
              </div>
            </div>
          </div>

          <!-- What's Included -->
          <div class="border-t border-gray-200 pt-6">
            <h3 class="text-xl font-semibold text-gray-900 mb-4">What's Included</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-green-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <div>
                  <p class="font-medium text-gray-900">Unlimited Mileage</p>
                  <p class="text-sm text-gray-600">Drive without distance limits</p>
                </div>
              </div>
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-green-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <div>
                  <p class="font-medium text-gray-900">Basic Insurance</p>
                  <p class="text-sm text-gray-600">Protection against damage</p>
                </div>
              </div>
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-green-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <div>
                  <p class="font-medium text-gray-900">24/7 Support</p>
                  <p class="text-sm text-gray-600">Call us anytime</p>
                </div>
              </div>
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-green-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <div>
                  <p class="font-medium text-gray-900">Free Cancellation</p>
                  <p class="text-sm text-gray-600">Up to 24 hours before pickup</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Next Steps -->
          <div class="border-t border-gray-200 pt-6 bg-blue-50 rounded-lg p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">What Happens Next?</h3>
            <ol class="space-y-3">
              <li class="flex gap-3">
                <span class="inline-flex items-center justify-center w-6 h-6 bg-blue-600 text-white rounded-full text-sm font-semibold flex-shrink-0">1</span>
                <span class="text-gray-700">A confirmation email will be sent to <strong><%= booking.user.email %></strong></span>
              </li>
              <li class="flex gap-3">
                <span class="inline-flex items-center justify-center w-6 h-6 bg-blue-600 text-white rounded-full text-sm font-semibold flex-shrink-0">2</span>
                <span class="text-gray-700">We'll contact you 24 hours before pickup to confirm your details</span>
              </li>
              <li class="flex gap-3">
                <span class="inline-flex items-center justify-center w-6 h-6 bg-blue-600 text-white rounded-full text-sm font-semibold flex-shrink-0">3</span>
                <span class="text-gray-700">Pick up your vehicle at the scheduled time with your confirmation email</span>
              </li>
              <li class="flex gap-3">
                <span class="inline-flex items-center justify-center w-6 h-6 bg-blue-600 text-white rounded-full text-sm font-semibold flex-shrink-0">4</span>
                <span class="text-gray-700">Enjoy your rental! Return the vehicle on time to your designated location</span>
              </li>
            </ol>
          </div>

          <!-- Contact Information -->
          <div class="border-t border-gray-200 pt-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Need Help?</h3>
            <div class="space-y-3 text-gray-700">
              <p><strong>Phone:</strong> <a href="tel:+15551234567" class="text-blue-600 hover:underline">(555) 123-4567</a></p>
              <p><strong>Email:</strong> <a href="mailto:support@torquex.com" class="text-blue-600 hover:underline">support@torquex.com</a></p>
              <p><strong>Hours:</strong> 24/7 Support Available</p>
            </div>
          </div>

          <!-- Action Buttons -->
          <div class="border-t border-gray-200 pt-6 flex gap-4">
            <a href="/user/bookings" class="flex-1 px-6 py-3 bg-blue-600 text-white rounded-lg font-medium hover:bg-blue-700 transition text-center">
              View All Bookings
            </a>
            <a href="/vehicles" class="flex-1 px-6 py-3 border border-gray-300 text-gray-700 rounded-lg font-medium hover:bg-gray-50 transition text-center">
              Browse More Vehicles
            </a>
          </div>
        </div>
      </div>

      <!-- Important Information -->
      <div class="bg-yellow-50 border-l-4 border-yellow-400 rounded-lg p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Important Information</h3>
        <ul class="space-y-2 text-sm text-gray-700">
          <li>• Please bring a valid driver's license and a photo ID to pickup</li>
          <li>• A valid credit card is required for the security deposit</li>
          <li>• Full tank of fuel is expected at return (fuel surcharge applies if not)</li>
          <li>• Any damages beyond wear and tear will be charged to your card on file</li>
          <li>• Cancellations must be made 24 hours before pickup for full refund</li>
        </ul>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
