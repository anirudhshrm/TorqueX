    <!-- Main Content -->
    <div class="flex-1 bg-gray-900 overflow-y-auto">
      <div class="p-6">
        <h1 class="text-2xl font-bold text-white mb-6">Manage Broadcasts</h1>

        <!-- Create Broadcast Form -->
        <div class="bg-gray-800 rounded-lg shadow-lg p-6 mb-6">
          <h2 class="text-lg font-semibold text-white mb-4">Create New Broadcast</h2>
          <form id="broadcast-form" action="/admin/broadcasts" method="POST" class="space-y-4">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div>
              <label for="title" class="block text-sm font-medium text-gray-200">Title</label>
              <input type="text" id="title" name="title"
                class="mt-1 block w-full rounded-md border-gray-600 bg-gray-700 text-white shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50"
                placeholder="Announcement Title">
            </div>
            <div>
              <label for="message" class="block text-sm font-medium text-gray-200">Broadcast Message</label>
              <textarea id="message" name="message" rows="3"
                class="mt-1 block w-full rounded-md border-gray-600 bg-gray-700 text-white shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50"
                required></textarea>
            </div>
            <div>
              <label for="userTarget" class="block text-sm font-medium text-gray-200">Target Users</label>
              <select id="userTarget" name="userTarget"
                class="mt-1 block w-full rounded-md border-gray-600 bg-gray-700 text-white shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50">
                <option value="ALL">All Users</option>
                <option value="USER">Regular Users Only</option>
                <option value="ADMIN">Admins Only</option>
              </select>
            </div>
            <div class="flex justify-end mt-4 md:mt-6 lg:mt-8">

              <button type="submit"
                class="mt-4 px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                Send Broadcast
              </button>
            </div>
          </form>
        </div>

        <!-- Broadcasts List -->
        <div class="bg-gray-800 rounded-lg shadow-lg overflow-hidden">
          <div class="px-6 py-4 border-b border-gray-700">
            <h2 class="text-lg font-semibold text-white">Recent Broadcasts</h2>
          </div>

          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-700">
              <thead class="bg-gray-700">
                <tr>
                  <th scope="col"
                    class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Message</th>
                  <th scope="col"
                    class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Admin</th>
                  <th scope="col"
                    class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Date</th>
                </tr>
              </thead>
              <tbody class="bg-gray-700 divide-y divide-gray-600">
                <% if (broadcasts && broadcasts.length> 0) { %>
                  <% broadcasts.forEach(broadcast=> { %>
                    <tr>
                      <td class="px-6 py-4 text-sm text-gray-100">
                        <%= broadcast.message %>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
                        Admin
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
                        <%= new Date(broadcast.createdAt).toLocaleString() %>
                      </td>
                    </tr>
                    <% }) %>
                      <% } else { %>
                        <tr>
                          <td colspan="3" class="px-6 py-4 whitespace-nowrap text-sm text-gray-400 text-center">
                            No broadcasts yet
                          </td>
                        </tr>
                        <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Initialize Socket.io (reuse global socket if available)
    if (!window.socket) {
      window.socket = io();
    }
    const socket = window.socket;

    document.getElementById('broadcast-form').addEventListener('submit', async (e) => {
      e.preventDefault();

      const title = document.getElementById('title').value;
      const message = document.getElementById('message').value;
      const userTarget = document.getElementById('userTarget').value;

      if (!message) {
        alert('Please enter a broadcast message');
        return;
      }

      // Show loading state
      const submitBtn = e.target.querySelector('button[type="submit"]');
      const originalText = submitBtn.innerText;
      submitBtn.innerText = 'Sending...';
      submitBtn.disabled = true;

      try {
        const csrfToken = document.querySelector('input[name="_csrf"]').value;
        const response = await fetch('/admin/broadcasts', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'X-CSRF-Token': csrfToken,
          },
          body: JSON.stringify({
            title,
            message,
            userTarget
          }),
        });

        const data = await response.json();

        if (data.success) {
          // Show success message
          alert('Broadcast sent successfully');

          // Reset form
          document.getElementById('title').value = '';
          document.getElementById('message').value = '';
          document.getElementById('userTarget').value = 'ALL';

          // Add the new broadcast to the table without reloading the page
          const table = document.querySelector('tbody');
          const newRow = document.createElement('tr');
          const timestamp = new Date().toLocaleString();

          newRow.innerHTML = `
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-100">
            ${message}
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
            Admin
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
            ${timestamp}
          </td>
        `;

          if (table.querySelector('td[colspan="3"]')) {
            // Remove the "No broadcasts yet" row if it exists
            table.innerHTML = '';
          }

          table.prepend(newRow);
        } else {
          alert(`Error: ${data.error || data.message || 'Could not send broadcast'}`);
        }
      } catch (error) {
        console.error('Error sending broadcast:', error);
        alert('Failed to send broadcast. Please try again.');
      } finally {
        // Reset button state
        submitBtn.innerText = originalText;
        submitBtn.disabled = false;
      }
    });
  </script>

