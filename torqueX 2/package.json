{
  "name": "torquex",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "start:no-clerk": "SKIP_CLERK=true node ./bin/www",
    "dev": "nodemon ./bin/www",
    "dev:no-clerk": "SKIP_CLERK=true nodemon ./bin/www",
    "build": "npm run prisma:generate",
    "generate-cert": "bash ./scripts/generate-ssl-cert.sh",
    "build:css": "npx tailwindcss -i ./public/stylesheets/tailwind.css -o ./public/stylesheets/style.css --watch",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "create:admin": "node ./scripts/create-admin.js",
    "create:test-users": "node ./scripts/create-test-users.js",
    "setup:demo": "npm run create:admin && npm run create:test-users",
    "render:setup": "bash ./scripts/render-setup.sh",
    "test": "jest --config config/jest/jest.config.js --colors",
    "test:watch": "jest --config config/jest/jest.config.js --watch --colors",
    "test:coverage": "jest --config config/jest/jest.config.js --coverage --colors",
    "test:verbose": "jest --config config/jest/jest.config.js --verbose --colors",
    "test:e2e": "SKIP_CLERK=true jest --config config/jest/jest-e2e.config.js --colors",
    "test:e2e:headed": "SKIP_CLERK=true HEADLESS=false jest --config config/jest/jest-e2e.config.js --colors",
    "test:all": "npm test && npm run test:e2e",
    "verify:redis": "node ./scripts/verify-redis.js"
  },
  "dependencies": {
    "@clerk/clerk-sdk-node": "^4.12.2",
    "@prisma/client": "^5.3.1",
    "connect-flash": "^0.1.1",
    "connect-redis": "^9.0.0",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^16.3.1",
    "ejs": "~2.6.1",
    "express": "~4.16.1",
    "express-session": "^1.17.3",
    "http-errors": "~1.6.3",
    "ioredis": "^5.8.2",
    "method-override": "^3.0.0",
    "morgan": "~1.9.1",
    "multer": "^2.0.2",
    "redis": "^5.9.0",
    "socket.io": "^4.7.2",
    "stripe": "^13.7.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/puppeteer": "^5.4.7",
    "autoprefixer": "^10.4.15",
    "jest": "^29.7.0",
    "jest-puppeteer": "^11.0.0",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.29",
    "prisma": "^5.3.1",
    "puppeteer": "^24.30.0",
    "supertest": "^7.1.4",
    "tailwindcss": "^3.3.3"
  }
}
